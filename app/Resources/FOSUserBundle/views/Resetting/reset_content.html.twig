{% trans_default_domain 'FOSUserBundle' %}
<div class="box box-primary">
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}

    <div class="box-header with-border">
        <h3 class="box-title">{{ 'resetting.reset.submit'|trans }}</h3>
    </div>
    <div class="box-body"> 

        <div class="form-group has-feedback">
            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr':{'class':'form-control'}}) }}
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            {% if form_errors(form.plainPassword.first) %}
                <label class="control-label" for="inputError">{{ form_errors(form.plainPassword.first) }}</label>
            {% endif %}
        </div>

        <div class="form-group has-feedback">
            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr':{'class':'form-control'}}) }}
            <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            {% if form_errors(form.plainPassword.second) %}
                <label class="control-label" for="inputError">{{ form_errors(form.plainPassword.second) }}</label>
            {% endif %} 
        </div>
    </div>

    <div class="box-footer">
        <div class="row">
        </div><div class="col-md-7"></div>
        <div class="col-md-5">
            <button type="submit" class="btn btn-block btn-social btn-flat btn-success" style="text-align: center;">
                <i class="fa fa-spinner"></i>
                {{ 'resetting.reset.submit'|trans }}
            </button>
        </div>
    </div>     
    {{ form_end(form) }}
</div> 