{% trans_default_domain 'FOSUserBundle' %}
<div class="box box-primary">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="box-header with-border">
            <h3 class="box-title">{{ 'security.login.submit'|trans }}</h3>
        </div>

        <div class="box-body">    
            <div class="form-group has-feedback">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans }}" />
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}"  id="password" name="_password" required="required">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            {% if error %}
                <div class="form-group has-error">
                    <label class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</label>
                </div>
            {% endif %}
        </div>

        <div class="box-footer">
            <div class="row">
            </div><div class="col-md-8">
                <div class="checkbox icheck">
                    <label>

                        <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />

                            <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                            </ins>
                        </div> <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" id="_submit" name="_submit" class="btn btn-block btn-social btn-flat btn-success" style="text-align: center;">
                    <i class="fa fa-sign-in"></i>
                    {{ 'security.login.submit'|trans }}
                </button>
            </div>
            <div class="row"> 
                <div class="col-md-12">
                    <div class="social-auth-links text-center">
                        <p>- OR -</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <div class="social-auth-links text-center">
                        <a class="btn btn-block btn-social btn-primary btn-flat" style="text-align: center;" href="{{ path('fos_user_registration_register') }}">
                            <i class="fa fa-save"></i>
                            {{ 'registration.submit'|trans }}
                        </a>

                    </div>
                </div>

                <div class="col-md-5">
                    <div class="social-auth-links text-center">
                        <a href="{{ path('fos_user_resetting_request') }}" style="text-align: center;" class="btn btn-block btn-social btn-info btn-flat">
                            <i class="fa fa-spinner"></i>
                            {{ 'resetting.request.submit'|trans }}
                        </a>
                    </div>
                </div>

            </div>
        </div>   
    </form>

</div>  